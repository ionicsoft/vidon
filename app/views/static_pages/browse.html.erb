<div class="container">
<div class="row" id="showbox">
    <h1>Browse shows</h1>
    <% Show.all[0..4].each do |sub| %>
      <div class="row well vcenter" style="padding: 15px">
        <div class="col-sm-2">
            <% if sub.promo_image.attached? %>
              <%= image_tag(url_for(sub.promo_image), :alt => "Promo Image", :style => "height: 100px; width: 100px;") %>
            <% else %>
              <%= image_tag("nullPhoto.png", :alt => "sub thumbnail", :style => "height: 100px; width: 100px;") %>
            <% end %>
        </div>
        <div class="col-sm-8">
          <h3><%= link_to sub.name, sub %></h3>
          <p><%= sub.description %></p>
        </div>
    </div>
    <% end %>
    <div class="row well vcenter" style="padding: 15px">
        <%= link_to "View More Shows", shows_path %>
    </div>
</div>
<div class="row">
  <h1>Browse Movies</h1>
  <% Movie.all[0..4].each do |mov| %>
    <div class="row well vcenter" style="padding: 15px">
      <div class="col-sm-2">
        <% if mov.promo_image.attached? %>
          <%= image_tag(url_for(mov.promo_image), :alt => "Promo Image", :style => "height: 100px; width: 100px;") %>
        <% else %>
          <%= image_tag("nullPhoto.png", :alt => "sub thumbnail", :style => "height: 100px; width: 100px;") %>
        <% end %>
      </div>
      <div class="col-sm-8">
        <h3><%= link_to mov.video.title, mov %></h3>
      </div>
      <div class="col-sm-8">
        <p><%= mov.video.description %></p>
      </div>
    </div>
  <% end %>
  <div class="row well vcenter" style="padding: 15px">
    <%= link_to "View More Movies", movies_path %>
  </div>
</div>
</div>