<div class="container">
  <div class="row justify-content-center">
    <% unless params[:search].nil? %>
    <div class="col-3" id="search-filters">
      <div class="card card-default">
        <h5 class="card-header text-body">Search filters</h5>
        <div class="card-body">
          <p>todo.</p>
        </div>
      </div>
    </div>
    <% end %>
    <div class="col-9" id="search-results">
      <div class="card card-default">
        <div class="card-body">
          <h5 class="text-body">
            <% unless params[:search].nil? %>
              <%= "Search results for \"#{params[:search]}\"" %>
            <% else %>
              <%= "Search results for \"#{params[:fsearch]}\"" %>
            <% end %>
          </h5>
          <hr>
          <div class="row pt-2 m-0">
            <% @results.each do |result| %>
              <% if result.is_a?(Customer) %>
                <div class="col-4 showcard p-0">
                  <%= link_to result do %>
                    <%= image_tag url_for(get_avatar result.person) %>
                    <div class="shadow"></div>
                    <div class="show-title">
                      <h5><%= result.person.full_name %></h5>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="col-4 showcard p-0">
                  <%= link_to result do %>
                    <%= image_tag url_for(result.promo_image) if result.promo_image.attached? %>
                    <div class="shadow"></div>
                    <div class="show-title">
                      <small><%= result.class.name %></small>
                      <h5><%= result.title %></h5>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
