<div class="container">
  <h3>My Shows</h3>
  <hr>
  <% current_person.user.shows.each do |theshow| %>
    <div class="row well">
      <div class="col-sm-2">
        <% if theshow.promo_image.attached? %>
          <%= image_tag(url_for(theshow.promo_image), :alt => "Promo Image", :style => "height: 400px; width: 300px;") %>
        <% else %>
          <%= image_tag("nullPhoto.png", :alt => "sub thumbnail", :style => "height: 100px; width: 100px;") %>
        <% end %>
      </div>
      <div class="col-sm-8">
        <b><%= theshow.name %></b>
        <p><%= theshow.description %></p>
      </div>
      <div class="col-sm-2">
        <%= link_to "Episodes", theshow, class: "btn btn-primary btn-block btn-sm" %>
      </div>
    </div>
  <% end %>
  <div class="col-sm-12 text-center">
    <%= link_to "Add New Show", newshow_path, class: "btn btn-primary btn-lg" %>
    <%= link_to "Add New Movie", newmovie_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>