<div class="container-fluid">
  <div class="guest-fill row">
    <div class="col">
    <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel" data-interval="4000">
      <div class="carousel-inner">
        <% (1..4).each do |num| %>
        <div class="carousel-item<%= " active" if num == 1 %>">
          <%= image_tag "homepage/0#{num}.jpg", alt: "Slide #{num}" %>
          <div class="carousel-caption">
            <h2 class="text-main">
              Say hello to subscriptions.
            </h2>
            <h4>
              Pick your shows, sit back, and enjoy.
            </h4>
            <h2>
              <%= link_to "Sign up today", signup_path, class: "btn btn-primary" %>
              <%= link_to "Producer? Sign up here", psignup_path, class: "btn btn-primary" %>
            </h2>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>