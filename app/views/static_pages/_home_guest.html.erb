<div class="container-fluid">
  <div class="guest-fill">
    <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel">
      <div class="carousel-inner">
        <% (1..4).each do |num| %>
        <div class="item<%= " active" if num == 1 %>">
          <%= image_tag "homepage/0#{num}.jpg", alt: "Slide #{num}" %>
          <div class="carousel-caption">
            <h2 class="text-main">
              Say hello to subscriptions.
            </h2>
            <h4>
              Pick your shows, sit back, and enjoy.
            </h4>
            <h2>
              <%= link_to "Sign up today", signup_path, class: "btn btn-primary btn-large" %>
              <%= link_to "Producer? Sign up here", psignup_path, class: "btn btn-primary btn-lg" %>
            </h2>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>