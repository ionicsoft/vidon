<!DOCTYPE html>
<html>
  <head>
    <title>Vidon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/7.4.1/video-js.css" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light navbar-bg-light navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <h1 id="company" class="nav-text"><%= link_to "Vidon", root_path %></h1>
        </div>
        
        <% if logged_in? and current_person.customer? %>
  		  <%= form_tag(search_page_path, :method => "get",   
              class: 'navbar-form navbar-right') do %>  
  		    <div class="input-group">
            <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>  
    		    <div class="input-group-btn">
              <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
    		    </div>
  		    </div>
        <% end %>
        <% end %>
  		  
  		  <ul class="nav navbar-nav navbar-right nav-text">
  		    <% if logged_in? %>
            <% if current_person.customer? %>
              <li><%= link_to "Browse", browse_path, class: "nav-link" %></li>
              <li><%= link_to "My Shows", my_shows_path, class: "nav-link" %></li>
              <li><%= link_to "My Rentals", my_rentals_path, class: "nav-link" %></li>
              <li><%= link_to "Friends", friends_path %></li>
            <% elsif current_person.producer?%>
              <li><%= link_to "My Shows", pro_shows_path, class: "nav-link" %></li>
            <% end %>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_person.first_name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% if current_person.customer? %>
                  <li><%= link_to "Friends", friends_path %></li>
                <% end %>
                <li><%= link_to "Profile", current_person.user %></li>
                <li><%= link_to "Settings", edit_person_path(current_person) %></li>
                <li role="seperator" class="divider"></li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><a href="/login" class="nav-link">Login</a></li>
          <% end %>
  		  </ul>
		  </div>
    </nav>
    <%= yield %>
    <footer id="footer" class="fixed-bottom">
      <small><%= link_to "i/onicSoft", "https://sites.google.com/view/ionicsoft" %></small>
      <ul>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
      </ul>
    </footer>
    <script src='https://vjs.zencdn.net/7.4.1/video.js'></script>
  </body>
</html>
