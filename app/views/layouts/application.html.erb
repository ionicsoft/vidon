<!DOCTYPE html>
<html>
  <head>
    <title>Vidon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light navbar-bg-light navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <h1 id="company" class="nav-text"><%= link_to "Vidon", root_path %></h1>
        </div>
        
  		  <form class="navbar-form navbar-right" role="search" id="searchbar" >
  		    <div class="input-group">
  			     <input type="text" class="form-control nav-text" placeholder="Search" name="srch-term" id="srch-term">
    		    <div class="input-group-btn">
    			    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    		    </div>
  		    </div>
  		  </form>
  		  
  		  <ul class="nav navbar-nav navbar-right nav-text">
  		    <% if logged_in? %>
            <li><a href="#" class="nav-link">My Shows</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_person %></li>
                <li><%= link_to "Settings", edit_person_path(current_person) %></li>
                <li role="seperator" class="divider"></li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><a href="/login" class="nav-link">Login</a></li>
          <% end %>
  		  </ul>
		  </div>
    </nav>
    <%= yield %>
    <footer id="footer">
      <small><%= link_to "i/onicSoft", "https://sites.google.com/view/ionicsoft" %></small>
      <ul>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
      </ul>
    </footer>
  </body>
</html>
