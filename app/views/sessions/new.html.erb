<div class="container">
  <%= render "flash_notice" %>
  <div class="row">
    <div class="col-4">
      <div class="card card-default">
        <h1 class="card-header" style="color:black;">Login</h1>
        <div class="card-body">
          <%= form_with scope: :session, url: login_path do |form| %>
            <div class="form-group">
              <%= form.label :username %>
              <%= form.text_field :username, autofocus: true, class: "form-control", placeholder: "Username" %>
            </div>
            
            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
            
            <div class="form-group">
              <%= form.label :remember_me, class: "checkbox inline" do %>
                <%= form.check_box :remember_me %>
                <span>Remember me</span>
              <% end %>
            </div>
            
            <div class="actions">
              <%= form.submit "Login", class: "btn btn-primary" %>
            </div>
          <% end %>
          
          <p>New user? <%= link_to "Sign up today!", signup_path %></p>
        </div>
      </div>
    </div>
    <div class="col-8">
      <%= image_tag "homepage/04.jpg", class: "login-img" %>
    </div>
  </div>
</div>
