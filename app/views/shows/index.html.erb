<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<ul class="shows_list">
  <% @shows.each do |show| %>
  <li>
    <p class="show_list_image">
      <%= image_tag("nullPhoto.png", :alt => "nullPhoto", :style => "height: 150px; width: 150px;") %>
    </p>
    
    <div class="show_description">
      <h3><%= show.name %></h3>
      <p>
        <%= show.description %>
        <br/>
        <%= link_to 'Check Out', show %>
      </p>
    </div>
  </li>
  <% end %>
</ul>

<br>
