<% if logged_in? && current_person.producer? %>
  <div class="panel panel-default">
    <%= form_with(model: ShowActor.new, local: true, class: "panel-body") do |form| %>
    
      <%= form.hidden_field :show_id, :value => @show.id %>
    
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_area :name, id: :show_actor_name, rows: "1", class: "form-control" %>
      </div>
    
      <div class="actions">
        <%= form.submit "Add actor", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
<% end %>
