<p id="notice"><%= notice %></p>

<h1>Profile Comments</h1>

<table>
  <thead>
    <tr>
      <th>Creation</th>
      <th>Customer</th>
      <th>Commentor</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_comments.each do |profile_comment| %>
      <tr>
        <td><%= profile_comment.creation %></td>
        <td><%= profile_comment.customer_id %></td>
        <td><%= profile_comment.commentor_id %></td>
        <td><%= profile_comment.comment %></td>
        <td><%= link_to 'Show', profile_comment %></td>
        <td><%= link_to 'Edit', edit_profile_comment_path(profile_comment) %></td>
        <td><%= link_to 'Destroy', profile_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile Comment', new_profile_comment_path %>
