<p id="notice"><%= notice %></p>

<p>
  <strong>Season:</strong>
  <%= @episode.season %>
</p>

<p>
  <strong>Show:</strong>
  <%= if @episode.show_id? then link_to @episode.show_id, @episode.show end %>
</p>

<p>
  <strong>Episode:</strong>
  <%= @episode.episode %>
</p>

<p>
  <strong>Absolute episode:</strong>
  <%= @episode.absolute_episode %>
</p>

<p>
  <strong>Video:</strong>
  <%= if @episode.video_id? then link_to @episode.video_id, @episode.video end %>
</p>

<div>
  <h4>Remote data:</h4>
  <% unless @episode.video.nil? %>
  <p>
    <strong>Video file:</strong>
    <%= @episode.video.filename %>
  </p>
  <% end %>
</div>

<%= link_to 'Edit', edit_episode_path(@episode) %> |
<%= link_to 'Back', episodes_path %>
