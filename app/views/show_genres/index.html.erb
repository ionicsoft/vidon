<p id="notice"><%= notice %></p>

<h1>Show Genres</h1>

<table>
  <thead>
    <tr>
      <th>Show</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show_genres.each do |show_genre| %>
      <tr>
        <td><%= show_genre.show_id %></td>
        <td><%= show_genre.genre %></td>
        <td><%= link_to 'Show', show_genre %></td>
        <td><%= link_to 'Edit', edit_show_genre_path(show_genre) %></td>
        <td><%= link_to 'Destroy', show_genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

