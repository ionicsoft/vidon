<p id="notice"><%= notice %></p>

<h1>Movie Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Rating</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_ratings.each do |movie_rating| %>
      <tr>
        <td><%= movie_rating.movie_id %></td>
        <td><%= movie_rating.rating %></td>
        <td><%= movie_rating.customer_id %></td>
        <td><%= link_to 'Show', movie_rating %></td>
        <td><%= link_to 'Edit', edit_movie_rating_path(movie_rating) %></td>
        <td><%= link_to 'Destroy', movie_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

