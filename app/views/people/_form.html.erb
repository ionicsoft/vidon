<%= form_with(model: person, local: true) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, id: :person_avatar,
      accept: "image/png,image/gif,image/jpeg", direct_upload: true,
      class: "direct-upload"%>
    <p class="help-block">Upload an image.</p>
  </div>
  
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :person_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, id: :person_password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :person_password_confirmation, class: "form-control" %>
  </div>
  <hr>
<% if current_person.customer? %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :person_first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :person_last_name, class: "form-control" %>
  </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Update", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
