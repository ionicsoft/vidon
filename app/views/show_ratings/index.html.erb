<p id="notice"><%= notice %></p>

<h1>Show Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Show</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show_ratings.each do |show_rating| %>
      <tr>
        <td><%= show_rating.rating %></td>
        <td><%= show_rating.show_id %></td>
        <td><%= link_to 'Show', show_rating %></td>
        <td><%= link_to 'Edit', edit_show_rating_path(show_rating) %></td>
        <td><%= link_to 'Destroy', show_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show Rating', new_show_rating_path %>
