<p id="notice"><%= notice %></p>

<p>
  <strong>Company name:</strong>
  <%= @producer.company_name %>
</p>

<p>
  <strong>Person:</strong>
  <%= if @producer.person_id? then link_to @producer.person_id, @producer.person end %>
</p>

<div>
  <h4>Remote data</h4>
  <% unless @producer.person.nil? %>
  <p>
    <strong>Name:</strong>
    <%= "#{@producer.person.first_name} #{@producer.person.last_name}" %>
  </p>
  
  <p>
    <strong>Email:</strong>
    <%= @producer.person.email %>
  </p>
  <% end %>
</div>

<%= link_to 'Edit', edit_producer_path(@producer) %> |
