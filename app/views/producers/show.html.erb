<div class="container">
  <div class="row">
    <div class="col">
      <div class="card card-default">
        <h2 class="card-header"><%= @producer.company_name %></h2>
        <div class="card-body">
          <h4>Published Works</h4>
          <div class="row pt-2 m-0">
            <% (@producer.shows + @producer.movies).each do |show| %>
              <div class="col-4 showcard p-0">
                <%= link_to show do %>
                  <%= image_tag url_for(show.promo_image) if show.promo_image.attached? %>
                  <div class="shadow"></div>
                  <div class="show-title">
                    <small><%= show.class.name %></small>
                    <h5><%= show.title %></h5>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
