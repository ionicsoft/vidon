<p id="notice"><%= notice %></p>

<h1>Show Actors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Show</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show_actors.each do |show_actor| %>
      <tr>
        <td><%= show_actor.name %></td>
        <td><%= show_actor.show_id %></td>
        <td><%= link_to 'Show', show_actor %></td>
        <td><%= link_to 'Edit', edit_show_actor_path(show_actor) %></td>
        <td><%= link_to 'Destroy', show_actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show Actor', new_show_actor_path %>
