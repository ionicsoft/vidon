<% if notice %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert">
      <span>&times;</span>
    </button>
  </div>
<% end %>
<% if flash[:danger] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= flash[:danger] %>
    <button type="button" class="close" data-dismiss="alert">
      <span>&times;</span>
    </button>
  </div>
<% end %>